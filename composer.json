{
    "name": "philadelphia/philadelphia",
    "description": "The PhiladelPhia is a FrameWork for PHP",
    "homepage": "https://philadelphia.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Fernando Fernandez",
            "email": "frfernandez1996@gmail.com"
        }
    ],
    "scripts": {
        "lint": "php server.php -l",
        "start": "php -S localhost:8081 server.php"
    },
	"autoload": {
		"classmap": [
			"app"
		]
    },
    "repositories": [
        {
            "type": "path",
            "url": "../app",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../database",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../router",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "../helpers",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": ">=5.6.9",
        "philadelphia/app": "@dev",
        "philadelphia/router": "@dev",
        "philadelphia/database": "@dev",
        "philadelphia/helpers": "@dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.0-dev"
        }
    },
    "config": {
		"process-timeout": 0
	},
    "minimum-stability": "dev"
}
